<WelcomeScreen>:
    FloatLayout:
        Button:
            id: log_in_button
            size_hint: .9, .05
            pos_hint: {"top": .3, "center_x": .5}
            text: "[u]Sign In[/u]"
            color: .64, .72, .66, 1
            on_release:
                root.parent.current = "sign_in_screen"

        Button:
            id: create_account_button
            size_hint: .9, .05
            pos_hint: {"top": .225, "center_x": .5}
            text: "[u]Create Account[/u]"
            color: .64, .72, .66, 1
            on_release:
                root.parent.current = "create_account_screen"


