#:kivy 2.0
#:import Factory kivy.factory.Factory
#:import utils kivy.utils


<MainScreen>:
    id: main
    BoxLayout:
        orientation: 'vertical'
        border: 0, 0, 0, 0
        NavScreen:
        Image:
            source: 'border01.png'
            size_hint: None, None
            size: 414, 32
            allow_stretch: True
            keep_ratio: False
        ScreenManagement:
            id: info_sm
            name: "info_sm"
            PokeDex:
            MoveDex:
            ItemDex:
            Trainer:

<NavScreen>:
    id: nav
    size_hint: 1, .1
    border: 0, 0, 0, 0
    BoxLayout:
        canvas.before:
            Color:
                rgba: .71, .17, .13, 1
            Rectangle:
                pos: self.pos
                size: self.size
        size_hint: 1, None
        orientation: "horizontal"
        padding: 20
        Button:
            id: p
            text: ' P'
            size_hint: None, None
            size: 64, 64
            pos_hint: {'x':.1, 'top': .9}
            background_normal: 'button_nav_sel.png'
            background_down: 'button_nav_sel_down.png'
            color: .17, .23, .2, 1
            font_name: "PokeFont"
            font_size: self.width/2.5
            on_release:
                root.parent.parent.ButtonClick(0)
                root.FixMenu(0)
        Button:
            text: ' M'
            id: m
            size_hint: None, None
            size: 64, 64
            pos_hint: {'x':.1, 'top': .9}
            background_normal: 'button_nav_normal.png'
            background_down: 'button_nav_down.png'
            color: .17, .23, .2, 1
            font_name: "PokeFont"
            font_size: self.width/2.5
            on_release: 
                root.parent.parent.ButtonClick(1)
                root.FixMenu(1)
        Button:
            text: ' I'
            id: i
            size_hint: None, None
            size: 64, 64
            pos_hint: {'x':.1, 'top': .9}
            background_normal: 'button_nav_normal.png'
            background_down: 'button_nav_down.png'
            color: .17, .23, .2, 1
            font_name: "PokeFont"
            font_size: self.width/2.5
            on_release: 
                root.parent.parent.ButtonClick(2)
                root.FixMenu(2)
        Button:
            id: t
            size_hint: None, None
            size: 64, 64
            pos_hint: {'x':.1, 'top': .9}
            border: 0, 0, 0, 0
            background_normal: 'button_nav_trainer.png'
            background_down: 'button_nav_train_down.png'
            on_release: 
                root.parent.parent.ButtonClick(3)
                root.FixMenu(3)
<PokeDex>:
    name: "poke"
    BoxLayout:
        canvas.before:
            Color:
                rgba: .64, .72, .66, 1
            Rectangle:
                pos: self.pos
                size: self.size
        padding: 0
        border: 0, 0, 0, 0
        id: poke
        orientation: "vertical"
        Label:
            size_hint: None, None
            size: 414, 64
            text: "Poke-Dex"
            font_name: "PokeFont"
            font_size: self.width/10
            color: .17, .23, .2, 1
            pos_hint: {'x':0, 'top': 0}
        BoxLayout:
            size_hint: 1, None
            orientation: "horizontal"
            Button:
                text: 'Number'
                id: num
                size_hint: .3, .5
                pos_hint: {'x':.1, 'top': .9}
                background_normal: 'button_cat_normal.png'
                background_down: 'button_cat_normal_down.png'
                color: .64, .72, .66, 1
                font_name: "PokeFont"
                on_release: root.GeneratePokemon(0)
            Button:
                text:"Name"
                id: name
                font_name: "PokeFont"
                pos_hint: {'x':.5, 'top': .9}
                size_hint: .3, .5
                background_normal: 'button_cat_normal.png'
                background_down: 'button_cat_normal_down.png'
                color: .64, .72, .66, 1
                on_release: root.GeneratePokemon(1)
            Button:
                text:"Type"
                id: type
                font_name: "PokeFont"
                pos_hint: {'x':.9, 'top': .9}
                size_hint: .3, .5
                background_normal: 'button_cat_normal.png'
                background_down: 'button_cat_normal_down.png'
                color: .64, .72, .66, 1
                on_release: root.GeneratePokemon(2)
       
        ScrollView:
            GridLayout:
                id: poke_grid
                size_hint:1, None
                height: self.minimum_height
                cols:1

