#:import Animation kivy.animation.Animation
#:import SlideTransition kivy.uix.screenmanager.SlideTransition

<FirebaseLoginScreen>:
    canvas.before:
        Color:
            rgba: .64, .72, .66, 1
        Rectangle:
            size: self.size
            pos: self.pos
    on_email_exists:
        sign_up_screen.ids.sign_in_button.disabled = False
        sign_up_screen.ids.sign_in_button.opacity = 1

    on_email_not_found:
        sign_in_screen.ids.sign_in_button.disabled = False
        sign_in_screen.ids.sign_in_button.opacity = 1

    ScreenManager:
        id: info_sm
        WelcomeScreen:
            id: welcome_screen
            name: "welcome_screen"
        SignInScreen:
            id: sign_in_screen
            name: "sign_in_screen"
        SignUpScreen:
            id: sign_up_screen
            name: "sign_up_screen"
